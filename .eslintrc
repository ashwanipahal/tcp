{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "describe": true,
    "expect": true,
    "it": true,
    "jest": true,
    "window": true,
    "beforeAll": true,
    "__DEV__": true
  },
  "rules": {
    "one-var-declaration-per-line": 0,
    "comma-dangle": 0,
    "import/no-extraneous-dependencies": 0,
    "arrow-body-style": 0,
    "linebreak-style": 0,
    "max-params": ["error", { "max": 7 }],
    "max-statements": ["error", { "max": 50 }],
    "max-lines": ["error", { "max": 420, "skipComments": true, "skipBlankLines": true }],
    "max-len": 0,
    "complexity": ["error", { "max": 10 }],
    /**
      Disabled temporarily
    "extra-rules/no-commented-out-code": "error",
    */
    "react-native/no-raw-text": 0,
    "react/button-has-type": 0,
    "sonarjs/no-small-switch": 0,

    /* these need to be addressed after the upgrade is merged */
    "camelcase": 0,
    "lines-between-class-members": 0,
    "no-class-assign": 0,
    "no-global-assign": 0,
    "no-unused-vars": 0,
    "no-use-before-define": 0,
    "no-else-return": 0,
    "object-shorthand": 0,
    "extra-rules/no-commented-out-code": 0,
    "import/order": 0,
    "import/no-cycle": 0,
    "import/prefer-default-export": 0,
    "react/prop-types": 0,
    "react-native/no-inline-styles": 0,
    "react/destructuring-assignment": 0,
    "react/jsx-filename-extension": 0,
    "react/no-unused-prop-types": 0

  },
  "overrides": [
    {
      "files": ["packages/core/**/*.native.js", "packages/core/**/*.native.jsx"],
      "rules": {
        "import/no-unresolved": "off"
      }
    }
  ],
  "plugins": [
    "react-native",
    "react-native-a11y",
    "jest",
    "flowtype",
    "prettier",
    "extra-rules",
    "sonarjs"
  ],
  "extends": [
    "airbnb",
    "plugin:react-native/all",
    "plugin:react-native-a11y/recommended",
    "plugin:flowtype/recommended",
    "prettier",
    "plugin:sonarjs/recommended"
  ]
}
