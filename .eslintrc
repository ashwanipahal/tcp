{
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "mocha": true,
      "es6": true
    },
    "rules": {
      "one-var-declaration-per-line": 0,
      "comma-dangle": 0,
      "arrow-body-style": 0,
      "linebreak-style":0,
      "max-params": ["error", { "max": 7 }],
      "max-statements": ["error", { "max": 50 }],
      "max-lines": ["error", { "max": 250 }],
      "max-len": 0,
      "complexity": ["error", { "max": 10 }],
      "extra-rules/no-commented-out-code": "error"
    },
    "plugins": [
      "react-native",
      "react-native-a11y",
      "jest",
      "flowtype",
      "prettier",
      "extra-rules"
      ],
    "extends": [
      "airbnb","plugin:react-native/all","plugin:react-native-a11y/recommended",
      "plugin:flowtype/recommended", "prettier"
    ],
    "parser": "babel-eslint",
    "globals": {
      "describe": true,
      "expect": true,
      "it": true,
      "jest": true,
      "window": true
    }
  }